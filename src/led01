// กำหนดขา GPIO ที่ใช้ควบคุม LED
int ledPin = 2;  // LED เชื่อมต่อที่ GPIO 2 (สามารถเปลี่ยนได้ตามต้องการ)

void setup() {
  // กำหนดให้ขา GPIO ที่เชื่อมต่อกับ LED เป็น OUTPUT
  pinMode(ledPin, OUTPUT);
}

void loop() {
  // เปิดไฟ LED
  digitalWrite(ledPin, HIGH);
  delay(1000); // หน่วงเวลา 1 วินาที (1000 มิลลิวินาที)
  
  // ปิดไฟ LED
  digitalWrite(ledPin, LOW);
  delay(1000); // หน่วงเวลา 1 วินาที (1000 มิลลิวินาที)
}
